{
  "name": "microbot-launcher",
  "version": "1.1.1",
  "description": "Launcher for the microbot client",
  "main": "main.js",
  "scripts": {
    "dev": "electron .",
    "start": "electron-forge start",
    "test": "echo \"Error: no test specified\" && exit 1",
    "package-windows": "electron-packager . MicrobotLauncher --platform=win32 --arch=x64 --out=dist1",
    "package": "electron-forge package",
    "build:x64": "electron-forge make --arch=x64",
    "build:ia32": "electron-forge make --arch=ia32"
  },
  "config": {
    "forge": {
      "packagerConfig": {
        "executableName": "microbot-launcher"
      },
      "makers": [
        {
          "name": "@electron-forge/maker-squirrel",
          "platforms": ["win32"]
        },
        {
          "name": "@electron-forge/maker-zip",
          "platforms": ["win32"]
        },
        {
          "name": "@electron-forge/maker-deb",
          "platforms": ["linux"]
        },
        {
          "name": "@electron-forge/maker-rpm",
          "platforms": ["linux"]
        }
      ]
    }
  },
  "author": "chsami",
  "license": "ISC",
  "devDependencies": {
    "@electron-forge/cli": "^7.4.0",
    "@electron-forge/maker-deb": "^7.4.0",
    "@electron-forge/maker-rpm": "^7.4.0",
    "@electron-forge/maker-squirrel": "^7.4.0",
    "@electron-forge/maker-zip": "^7.4.0",
    "@electron-forge/plugin-auto-unpack-natives": "^7.4.0",
    "@electron-forge/plugin-fuses": "^7.4.0",
    "@electron/fuses": "^1.8.0",
    "electron": "^33.2.0"
  },
  "dependencies": {
    "adm-zip": "^0.5.15",
    "applicationinsights": "^2.9.6",
    "axios": "^1.7.2",
    "electron-squirrel-startup": "^1.0.1",
    "update-electron-app": "^3.0.0"
  },
  "build": {
    "appId": "MicrobotLauncher",
    "productName": "MicrobotLauncher",
    "directories": {
      "buildResources": "images"
    },
    "win": {
      "target": "squirrel"
    },
    "mac": {
      "target": "dmg"
    },
    "linux": {
      "target": "AppImage"
    }
  }
}
